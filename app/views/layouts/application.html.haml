!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title= (@content and !@content.send("page_title_#{session[:locale]}").blank?) ? @content.send("page_title_#{session[:locale]}") : default_page_title
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "description", :content => (@content and !@content.send("page_description_#{session[:locale]}").blank?) ? @content.send("page_description_#{session[:locale]}") : default_page_description} 
    %meta{:name => "keywords", :content => @keywords}
    %meta{:name => "revisit-after", :content => "10 days"}
    %link{:rel => "shortcut icon", :href => "/favicon.ico"}
    = stylesheet_link_tag 'site/front', 'site/slimbox2', 'jquery.jscrollpane', 'superfish', 'superfish-vertical', 'fancybox/jquery.fancybox-1.3.4', :cache => true
    = javascript_include_tag 'jquery', 'jquery-ui', 'jrails', 'slimbox2', 'application', 'menu', 'fade_cycle', 'jquery.mousewheel', 'mwheelIntent', 'jquery.jscrollpane', 'hoverIntent', 'superfish', 'fancybox/jquery.fancybox-1.3.4.pack', 'fancybox/jquery.easing-1.3.pack', 'fancybox/jquery.mousewheel-3.0.4.pack', :cache => true
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-29622865-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    #container
      #content_container
        #header
          = render :partial => "shared/header"
        #middle
          = render :partial => 'shared/middle'
      .clear
      #footer.text_center
        = render :partial => "shared/footer"